<?xml version="1.0"?>
<launch>
    <arg name="veh" default="pi" doc="Name of vehicle."/>

    <!-- Camera nodes including capture, decompression, rectification, etc. -->
    <include file="$(find pi_camera)/launch/camera.launch">
        <arg name="veh" value="$(arg veh)"/>
    </include>

    <!-- Color correction -->
    <node ns="$(arg veh)" name="anti_instagram_node" pkg="anti_instagram" type="anti_instagram_node.py" output="screen">
        <remap from="~uncorrected_image" to="camera_node/image/compressed"/>
    </node>

    <!-- Line detector -->
    <node ns="$(arg veh)" name="line_detector_node" pkg="line_detector" type="line_detector_node.py" output="screen" required="true">
        <remap from="~image" to="camera_node/image/compressed"/>
        <remap from="~transform" to="anti_instagram_node/transform"/>
        <rosparam command="load" file="$(find duckietown)/config/line_detector/config.yaml"/>
    </node>
</launch>
